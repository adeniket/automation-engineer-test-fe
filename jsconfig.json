{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "bundler",
    "target": "ES2024",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "test/**/*", "vite.config.js"],
  "exclude": ["node_modules", "dist"]
}
